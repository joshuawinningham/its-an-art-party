<section class="bg-gray-100 py-20 px-4" id="contact">
  <div class="max-w-6xl mx-auto flex flex-col md:flex-row gap-12">
    <!-- Left Side -->
    <div class="md:w-1/3 text-left">
      <h2
        class="text-brand-teal text-3xl md:text-4xl lg:text-5xl mb-6 tracking-wide leading-tight"
      >
        PLAN YOUR<br />PAINT PARTY<br />TODAY
      </h2>

      <p class="text-brand-pink font-body text-sm mb-8 leading-relaxed">
        Please include date, time, approx # of painters, age, and location so
        that we can start creating your custom party!
      </p>

      <div class="space-y-4 font-body text-gray-600 text-sm">
        <div class="flex items-start space-x-3">
          <span class="text-brand-pink text-xl">üìç</span>
          <p>7845 Colony Rd Ste C4-227<br />Charlotte, NC 28226</p>
        </div>
        <div class="flex items-center space-x-3">
          <span class="text-brand-pink text-xl">‚úâ</span>
          <p>robin@itsanartparty.com</p>
        </div>
        <div class="flex items-center space-x-3">
          <span class="text-brand-pink text-xl">üìû</span>
          <p>980-253-4829</p>
        </div>
      </div>
    </div>

    <!-- Right Side: Contact Form -->
    <div class="md:w-2/3">
      <!-- Success Message -->
      <div
        id="home-contact-success"
        class="hidden bg-white p-8 rounded-lg shadow-sm text-center h-full flex flex-col items-center justify-center"
      >
        <div
          class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4"
        >
          <svg
            class="w-8 h-8 text-green-500"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 13l4 4L19 7"></path>
          </svg>
        </div>
        <h3 class="font-display text-2xl text-brand-teal mb-2 uppercase">
          Message Sent!
        </h3>
        <p class="font-body text-gray-600 mb-6">
          Thank you! I'll get back to you soon.
        </p>
        <button
          id="home-contact-reset-btn"
          class="text-brand-pink font-bold uppercase text-sm hover:underline"
        >
          Send Another Message
        </button>
      </div>

      <!-- Form -->
      <div
        id="home-contact-form-container"
        class="bg-white p-8 rounded-lg shadow-sm"
      >
        <form id="home-contact-form" class="space-y-6">
          <input
            type="hidden"
            name="access_key"
            value="fa36c3ee-5545-45ed-b966-ea77eef22cb3"
          />
          <input
            type="hidden"
            name="subject"
            value="New Home Page Inquiry from itsanartparty.com"
          />
          <input type="hidden" name="from_name" value="It's an Art Party" />
          <input
            type="checkbox"
            name="botcheck"
            class="hidden"
            style="display: none;"
          />

          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <input
              type="text"
              name="name"
              placeholder="Name"
              required
              class="w-full bg-gray-50 border border-gray-100 rounded-lg p-3 text-sm font-body shadow-sm focus:shadow-md focus:ring-2 focus:ring-brand-pink focus:border-transparent transition-all duration-300 placeholder-gray-400"
            />
            <input
              type="email"
              name="email"
              placeholder="Email"
              required
              class="w-full bg-gray-50 border border-gray-100 rounded-lg p-3 text-sm font-body shadow-sm focus:shadow-md focus:ring-2 focus:ring-brand-pink focus:border-transparent transition-all duration-300 placeholder-gray-400"
            />
          </div>

          <input
            type="tel"
            name="phone"
            placeholder="Phone"
            class="w-full bg-gray-50 border border-gray-100 rounded-lg p-3 text-sm font-body shadow-sm focus:shadow-md focus:ring-2 focus:ring-brand-pink focus:border-transparent transition-all duration-300 placeholder-gray-400"
          />
          <!-- Adding Phone field to match Contact Page if desired, but sticking to existing design for now unless needed. 
                     Actually, checking existing design: it didn't have phone. 
                     But the contact page form DOES have phone. 
                     I'll stick to the existing visual design (Name, Email, Message) but adds name attributes which were missing. 
                -->

          <textarea
            name="message"
            rows="6"
            placeholder="Message"
            required
            class="w-full bg-gray-50 border border-gray-100 rounded-lg p-3 text-sm font-body shadow-sm focus:shadow-md focus:ring-2 focus:ring-brand-pink focus:border-transparent transition-all duration-300 placeholder-gray-400"
          ></textarea>

          <button
            type="submit"
            id="home-contact-submit-btn"
            class="bg-brand-pink hover:bg-pink-600 text-white font-bold py-3 px-12 rounded-full text-xs uppercase tracking-widest transition-all duration-300 transform hover:scale-105 w-full shadow-md disabled:opacity-50 disabled:cursor-not-allowed"
          >
            Send
          </button>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("home-contact-form") as HTMLFormElement;
  const submitBtn = document.getElementById(
    "home-contact-submit-btn",
  ) as HTMLButtonElement;
  const successMsg = document.getElementById("home-contact-success");
  const formContainer = document.getElementById("home-contact-form-container");
  const resetBtn = document.getElementById("home-contact-reset-btn");

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      submitBtn.disabled = true;
      submitBtn.textContent = "Sending...";

      const formData = new FormData(form);
      // Add replyto
      const emailInput = form.querySelector(
        'input[name="email"]',
      ) as HTMLInputElement;
      if (emailInput) {
        formData.append("replyto", emailInput.value);
      }

      try {
        const response = await fetch("https://api.web3forms.com/submit", {
          method: "POST",
          body: formData,
        });

        const result = await response.json();

        if (result.success) {
          if (successMsg) successMsg.classList.remove("hidden");
          if (formContainer) formContainer.classList.add("hidden");
          form.reset();
        } else {
          throw new Error(result.message);
        }
      } catch (error) {
        alert("Something went wrong. Please try again.");
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = "Send";
      }
    });
  }

  if (resetBtn) {
    resetBtn.addEventListener("click", () => {
      if (successMsg) successMsg.classList.add("hidden");
      if (formContainer) formContainer.classList.remove("hidden");
    });
  }
</script>
