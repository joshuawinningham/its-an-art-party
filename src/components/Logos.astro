---
import { Image } from "astro:assets";
import logo1 from "../assets/images/charlotte_observer_logo.svg";
import logo2 from "../assets/images/moms-charlotte-logo.png";
import logo3 from "../assets/images/mommybknowsbest.png";
import logo4 from "../assets/images/thebestcrowesnest.png"; // Creative Child / Best Crowe's Nest
import logo5 from "../assets/images/brittneys-rabbit-hole-logo.png";

const { images } = Astro.props;

const logos = [
  { src: logo1, alt: "The Charlotte Observer" },
  { src: logo2, alt: "Charlotte Parent" },
  { src: logo3, alt: "Macaroni Kid" },
  { src: logo4, alt: "Creative Child" },
  { src: logo5, alt: "Brittany's Rabbit Hole" },
];

const displayLogos = images?.length
  ? images.map((img: any) => ({
      src: img.src || img.url || img, // Handle both WP image object and direct URL
      alt: img.alt || "Press Logo",
    }))
  : logos;
---

<section class="bg-brand-teal py-8 px-4">
  <div
    class="max-w-6xl mx-auto flex flex-wrap justify-center items-center gap-6 md:gap-12"
  >
    {
      displayLogos.map((logo: any) => (
        <div class="transform transition duration-500 hover:scale-110">
          <Image
            src={logo.src}
            alt={logo.alt}
            width={200}
            height={100}
            class={`w-auto object-contain ${logo.alt === "The Charlotte Observer" ? "h-8" : "h-16"}`}
          />
        </div>
      ))
    }
  </div>
</section>
