---
import { type HeroBlock } from "../../lib/wordpress";

interface Props {
    block: HeroBlock;
}

const { block } = Astro.props;
const { headline, subheadline, image, quote, button_text, button_link } = block;

const bgImage = image?.url || "/images/charlotte-kids-paint-party.jpg"; // Fallback
---

<section class="relative overflow-hidden text-white">
    {/* Background Image with Overlay */}
    <div
        class="absolute inset-0 bg-cover bg-center"
        style={`background-image: url('${bgImage}');`}
    >
    </div>
    <div class="absolute inset-0 bg-black/40"></div>

    {/* Top Wave Decoration (Teal) */}
    <div class="absolute top-0 left-0 w-full z-10 overflow-hidden leading-[0]">
        <svg
            class="relative block w-[calc(100%+1.3px)] h-[80px] md:h-[160px]"
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M0,0V46.29c47.79,22.2,103.59,32.17,158,28,70.36-5.37,136.33-33.31,206.8-37.5C438.64,32.43,512.34,53.67,583,72.05c69.27,18,138.3,24.88,209.4,13.08,36.15-6,69.85-17.84,104.45-29.34C989.49,25,1113-14.29,1200,52.47V0Z"
                class="fill-white"></path>
            {
                /* Changed fill to white to blend with potential previous white section or header */
            }
        </svg>
    </div>

    {/* Hero Content */}
    <div
        class="relative z-10 pt-32 pb-48 md:pb-72 px-4 text-center max-w-5xl mx-auto"
    >
        {
            quote && (
                <p class="text-brand-yellow font-display text-xl md:text-2xl mb-6 tracking-wide uppercase">
                    {quote}
                </p>
            )
        }

        <h1
            class="text-5xl md:text-8xl mb-4 drop-shadow-xl font-display transform -rotate-2"
        >
            {headline}
        </h1>

        {
            subheadline && (
                <h2 class="text-2xl md:text-5xl mb-10 text-white drop-shadow-md tracking-wide font-display">
                    {subheadline}
                </h2>
            )
        }

        {
            button_text && button_link && (
                <a
                    href={button_link}
                    class="inline-block bg-brand-pink hover:bg-pink-600 text-white font-bold py-4 px-10 rounded-full text-lg uppercase tracking-widest transition transform hover:scale-105 shadow-xl border-4 border-white/20"
                >
                    {button_text}
                </a>
            )
        }
    </div>

    {/* Bottom Wave Decoration (Pink) */}
    <div
        class="absolute bottom-0 left-0 w-full z-10 overflow-hidden leading-[0]"
    >
        <svg
            class="relative block w-[calc(100%+1.3px)] h-[100px] md:h-[150px]"
            data-name="Layer 1"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1200 120"
            preserveAspectRatio="none"
        >
            <path
                d="M985.66,92.83C906.67,72,823.78,31,743.84,14.19c-82.26-17.34-168.06-16.33-250.45.39-57.84,11.73-114,31.07-172,41.86A600.21,600.21,0,0,1,0,27.35V120H1200V95.8C1132.19,118.92,1055.71,111.31,985.66,92.83Z"
                class="fill-brand-pink"></path>
        </svg>
    </div>
</section>
