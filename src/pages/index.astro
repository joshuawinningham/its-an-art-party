	description={seoDescription}
	image="/images/og-homepage.jpg"
>
	<Header />
    <FeatureCards />
    <About />
    <Logos />
    <Gallery />
    <PartyOptions />
    <Pricing />
    <Cta />
    <Testimonials />
    <Contact />
    <Footer />
</Layout>
