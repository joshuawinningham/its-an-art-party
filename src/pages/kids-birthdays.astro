---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import Cta from "../components/Cta.astro";

// Pricing image
import pricingImg from "../assets/images/art-diary-picasso-quote.jpg";

// Gallery Images
import gallery1 from "../assets/images/kids-art-paint-party.jpg";
import gallery2 from "../assets/images/kids-painting-birthday-party.jpg";
import gallery3 from "../assets/images/custom-dog-paint-party.jpg";
import gallery4 from "../assets/images/mermaid-initial-paint-party.jpg";
import gallery5 from "../assets/images/ice-cream-paint-party.jpg";
import gallery6 from "../assets/images/dinosaur-kids-paint-party.jpg";
import gallery7 from "../assets/images/kids-paint-birthday-party.jpg";
import gallery8 from "../assets/images/unicorn-kids-canvas-painting.jpg";
import gallery9 from "../assets/images/mermaid-paint-party.jpg";

const galleryImages = [
    { src: gallery1, alt: "Kids art paint party with colorful canvases" },
    { src: gallery2, alt: "Children painting at birthday party celebration" },
    { src: gallery3, alt: "Custom dog portrait painting party" },
    { src: gallery4, alt: "Mermaid initial letter painting for girls party" },
    { src: gallery5, alt: "Ice cream cone canvas painting for summer party" },
    { src: gallery6, alt: "Dinosaur themed birthday paint party for boys" },
    { src: gallery7, alt: "Kids paint birthday party group activity" },
    { src: gallery8, alt: "Unicorn canvas painting party for girls" },
    { src: gallery9, alt: "Mermaid tail painting party design" },
];

const seoDescription = "Kids canvas paint party packages in Charlotte starting at $240 for up to 8 children. Mobile birthday parties with all supplies, setup & cleanup included. Custom themes available!";
---

<Layout 
    title="Kids Birthday Paint Parties Charlotte | Canvas Painting Packages"
    description={seoDescription}
    image="/images/og-kids-birthdays.jpg"
>
    <Header showHero={false} />

    <main>
        <!-- Page Header -->
        <PageHeader
            title="PARTIES FOR KIDS"
            subtitle='"The world is but a canvas to the imagination." Henry David Thoreau'
        />

        <!-- Canvas Paint Parties Section -->
        <section class="bg-gray-50 py-12">
            <div class="container mx-auto px-4">
                <div
                    class="max-w-5xl mx-auto bg-white rounded-sm shadow-lg overflow-hidden"
                >
                    <!-- Header -->
                    <div class="bg-brand-pink py-4 text-center">
                        <h2
                            class="font-display text-3xl md:text-4xl text-white uppercase tracking-wide"
                        >
                            Canvas Paint Parties
                        </h2>
                    </div>

                    <div
                        class="p-6 md:p-10 flex flex-col md:flex-row gap-8 md:gap-12"
                    >
                        <!-- Left Content -->
                        <div class="flex-1">
                            <h3
                                class="font-display text-3xl text-brand-pink mb-4 uppercase"
                            >
                                Description
                            </h3>
                            <p class="text-gray-600 mb-4 leading-relaxed">
                                Paint parties are a great way to celebrate while
                                exploring art with family and friends!
                            </p>
                            <p class="text-gray-600 mb-4 leading-relaxed">
                                <strong>Customize any project</strong> based on the
                                birthday theme or the personal taste of the birthday
                                boy or girl.
                            </p>
                            <p class="text-gray-600 mb-4 leading-relaxed">
                                <strong
                                    >All parties are $240 for up to 8 children.
                                    Add $20 for each additional child.</strong
                                >
                            </p>
                            <p class="text-gray-600 mb-6 leading-relaxed">
                                <strong
                                    >A $75 non-refundable deposit is due at the
                                    time of booking and will be applied to the
                                    total amount on the day of the party.</strong
                                >
                            </p>

                            <ul class="space-y-2 mb-8">
                                <li
                                    class="flex items-center gap-3 text-gray-700 font-medium"
                                >
                                    <div
                                        class="bg-brand-pink rounded-full p-0.5"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-3 w-3 text-white"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    Starting From $240
                                </li>
                                <li
                                    class="flex items-center gap-3 text-gray-700 font-medium"
                                >
                                    <div
                                        class="bg-brand-pink rounded-full p-0.5"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-3 w-3 text-white"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    Unlimited Design Themes
                                </li>
                                <li
                                    class="flex items-center gap-3 text-gray-700 font-medium"
                                >
                                    <div
                                        class="bg-brand-pink rounded-full p-0.5"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-3 w-3 text-white"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    Up To 25 Guests
                                </li>
                                <li
                                    class="flex items-center gap-3 text-gray-700 font-medium"
                                >
                                    <div
                                        class="bg-brand-pink rounded-full p-0.5"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-3 w-3 text-white"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    1 - 2 Hours (45-60 minute painting time)
                                </li>
                                <li
                                    class="flex items-center gap-3 text-gray-700 font-medium"
                                >
                                    <div
                                        class="bg-brand-pink rounded-full p-0.5"
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="h-3 w-3 text-white"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                                                clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    Free Planning and Consultation
                                </li>
                            </ul>

                            <a
                                href="/contact"
                                class="inline-block bg-brand-pink text-white px-8 py-3 rounded-full font-display font-bold uppercase text-lg hover:bg-pink-500 transition shadow-md"
                            >
                                Choose This
                            </a>
                        </div>

                        <!-- Right Content (Carousel) -->
                        <div class="flex-1 relative group">
                            <div
                                class="overflow-hidden rounded-lg shadow-md h-[400px] relative"
                            >
                                <div
                                    id="carousel-track"
                                    class="flex transition-transform duration-500 ease-in-out h-full"
                                >
                                    {
                                        galleryImages.map((image, index) => (
                                            <div class="w-full flex-shrink-0 h-full">
                                                <img
                                                    src={image.src.src}
                                                    alt={image.alt}
                                                    class="w-full h-full object-cover"
                                                    loading={index === 0 ? "eager" : "lazy"}
                                                />
                                            </div>
                                        ))
                                    }
                                </div>

                                <!-- Navigation Arrows -->
                                <button
                                    id="prev-btn"
                                    class="absolute left-2 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-2 rounded-full shadow-md opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer z-10"
                                    aria-label="Previous slide"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M15 19l-7-7 7-7"></path>
                                    </svg>
                                </button>
                                <button
                                    id="next-btn"
                                    class="absolute right-2 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white text-gray-800 p-2 rounded-full shadow-md opacity-0 group-hover:opacity-100 transition-opacity cursor-pointer z-10"
                                    aria-label="Next slide"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Details Section -->
                <div class="max-w-5xl mx-auto mt-12">
                    <h3
                        class="font-display text-3xl md:text-4xl text-brand-pink text-center uppercase mb-8"
                    >
                        Additional Details
                    </h3>

                    <div
                        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
                    >
                        <!-- What to Wear -->
                        <div
                            class="bg-[#5BBAB5] text-white p-8 text-center rounded-sm shadow-md flex flex-col items-center h-full"
                        >
                            <div class="mb-4">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-16 w-16"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        d="M12 2C13.1 2 14 2.9 14 4V5H18C19.1 5 20 5.9 20 7V19C20 20.1 19.1 21 18 21H6C4.9 21 4 20.1 4 19V7C4 5.9 4.9 5 6 5H10V4C10 2.9 10.9 2 12 2M12 4C11.45 4 11 4.45 11 5H13C13 4.45 12.55 4 12 4M6 7V19H18V7H6Z"
                                    ></path>
                                </svg>
                            </div>
                            <h4
                                class="font-display text-xl uppercase mb-3 font-bold"
                            >
                                What to Wear
                            </h4>
                            <p class="text-sm leading-relaxed opacity-90">
                                Dress for fun in clothes that will get a little
                                messy and/or bring a smock to wear.
                            </p>
                        </div>

                        <!-- Art Supplies -->
                        <div
                            class="bg-[#F5C024] text-white p-8 text-center rounded-sm shadow-md flex flex-col items-center h-full"
                        >
                            <div class="mb-4">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-16 w-16"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        d="M20.71,4.63L19.37,3.29C19,2.9 18.35,2.9 17.96,3.29L9,12.25L11.75,15L20.71,6.04C21.1,5.65 21.1,5 20.71,4.63M7,14A3,3 0 0,0 4,17C4,18.31 2.84,19 2,19C2.92,20.22 4.5,21 6,21A4,4 0 0,0 10,17A3,3 0 0,0 7,14Z"
                                    ></path>
                                </svg>
                            </div>
                            <h4
                                class="font-display text-xl uppercase mb-3 font-bold"
                            >
                                Art Supplies
                            </h4>
                            <p class="text-sm leading-relaxed opacity-90">
                                I bring the supplies to you and they are
                                included in the party price.
                            </p>
                        </div>

                        <!-- Party Favors -->
                        <div
                            class="bg-[#EF6490] text-white p-8 text-center rounded-sm shadow-md flex flex-col items-center h-full"
                        >
                            <div class="mb-4">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-16 w-16"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        d="M18,6V4H6V6H2V20H22V6H18M6,18V8H9V18H6M18,18H15V8H18V18M11,18H13V8H11V18M12,2L14.5,4.5L12,7L9.5,4.5L12,2Z"
                                    ></path>
                                </svg>
                            </div>
                            <h4
                                class="font-display text-xl uppercase mb-3 font-bold"
                            >
                                Party Favors
                            </h4>
                            <p class="text-sm leading-relaxed opacity-90">
                                Guests get to take their custom painting home to
                                display as a party favor!
                            </p>
                        </div>

                        <!-- Instruction -->
                        <div
                            class="bg-[#2B80B0] text-white p-8 text-center rounded-sm shadow-md flex flex-col items-center h-full"
                        >
                            <div class="mb-4">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="h-16 w-16"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                    aria-hidden="true"
                                >
                                    <path
                                        d="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                    ></path>
                                </svg>
                            </div>
                            <h4
                                class="font-display text-xl uppercase mb-3 font-bold"
                            >
                                Instruction
                            </h4>
                            <p class="text-sm leading-relaxed opacity-90">
                                I provide professional instruction for painting
                                with hands-on help and guidance.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const track = document.getElementById("carousel-track");
                const prevBtn = document.getElementById("prev-btn");
                const nextBtn = document.getElementById("next-btn");

                if (!track || !prevBtn || !nextBtn) return;

                const slides = track.children;
                const slideCount = slides.length;
                let currentIndex = 0;

                const updateCarousel = () => {
                    track.style.transform = `translateX(-${currentIndex * 100}%)`;
                };

                const nextSlide = () => {
                    currentIndex = (currentIndex + 1) % slideCount;
                    updateCarousel();
                };

                const prevSlide = () => {
                    currentIndex = (currentIndex - 1 + slideCount) % slideCount;
                    updateCarousel();
                };

                nextBtn.addEventListener("click", nextSlide);
                prevBtn.addEventListener("click", prevSlide);

                // Auto advance every 5 seconds
                setInterval(nextSlide, 5000);
            });
        </script>

        <!-- What to Expect Section -->
        <section
            class="bg-brand-pink py-16 text-white text-center relative overflow-hidden"
        >
            <!-- Decorative Stars -->
            <div
                class="absolute top-10 right-20 text-white text-4xl opacity-40"
                aria-hidden="true"
            >
                ★
            </div>
            <div
                class="absolute bottom-20 left-10 text-white text-3xl opacity-40"
                aria-hidden="true"
            >
                ★
            </div>
            <div
                class="absolute top-1/3 left-1/4 text-white text-2xl opacity-25"
                aria-hidden="true"
            >
                ★
            </div>
            <div
                class="absolute bottom-1/4 right-1/3 text-white text-5xl opacity-30"
                aria-hidden="true"
            >
                ★
            </div>

            <!-- Decorative Circles -->
            <div
                class="absolute top-20 left-10 w-4 h-4 bg-white rounded-full opacity-25"
                aria-hidden="true"
            >
            </div>
            <div
                class="absolute bottom-10 right-10 w-6 h-6 bg-white rounded-full opacity-20"
                aria-hidden="true"
            >
            </div>
            <div
                class="absolute top-1/2 right-20 w-3 h-3 bg-white rounded-full opacity-30"
                aria-hidden="true"
            >
            </div>

            <div class="container mx-auto px-4 relative z-10">
                <h2 class="font-display text-4xl md:text-5xl mb-8 uppercase">
                    What to Expect
                </h2>
                <div class="max-w-3xl mx-auto mb-12">
                    <p class="font-body text-sm md:text-base leading-relaxed">
                        Party planning includes selecting a theme for canvas
                        designs a week in advance of the party. I will create
                        black and white outline designs ahead of time on each
                        canvas for the kids to paint during the party. Upon
                        arrival, I will set up tables with all of the art
                        supplies (tables not included). Painting will take
                        approximately 45-60 minutes. I will clean up all art
                        supplies and prepare your tables for other activities of
                        your choosing (food and drinks not included). If there
                        is anything else I can do to assist during the party,
                        just ask! I am here to help. Most parties only require
                        access to trash cans and sinks.
                    </p>
                </div>

                <!-- Picasso Quote Image -->
                <div class="flex justify-center">
                    <div
                        class="w-48 h-48 md:w-56 md:h-56 bg-white rounded-lg shadow-2xl overflow-hidden"
                    >
                        <img
                            src={pricingImg.src}
                            alt="Painting is just another way of keeping a diary - Pablo Picasso quote"
                            class="w-full h-full object-cover"
                            loading="lazy"
                        />
                    </div>
                </div>
            </div>
        </section>

        <!-- Photo Gallery -->
        <section class="bg-white py-14" aria-label="Paint party photo gallery">
            <div class="container mx-auto px-4">
                <div class="overflow-x-auto pb-4">
                    <div class="flex gap-4 min-w-max">
                        {
                            galleryImages.map((image) => (
                                <div class="w-64 h-64 flex-shrink-0 rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
                                    <img
                                        src={image.src.src}
                                        alt={image.alt}
                                        class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
                                        loading="lazy"
                                    />
                                </div>
                            ))
                        }
                    </div>
                </div>
            </div>
        </section>

        <!-- CTA -->
        <Cta title="Plan Your Party Today!" />
    </main>

    <Footer />
</Layout>

<style>
    .overflow-x-auto::-webkit-scrollbar {
        height: 6px;
    }

    .overflow-x-auto::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }

    .overflow-x-auto::-webkit-scrollbar-thumb {
        background: #ea5283;
        border-radius: 10px;
    }

    .overflow-x-auto::-webkit-scrollbar-thumb:hover {
        background: #d9739f;
    }
</style>
