    pinterest: "M12 0c-6.627 0-12 5.372-12 12 0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738.098.119.112.224.083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12 0-6.628-5.373-12-12-12z",
};

// Social platform labels
const socialLabels: Record<string, string> = {
    facebook: "Follow us on Facebook",
    twitter: "Follow us on Twitter",
    youtube: "Subscribe to our YouTube channel",
    instagram: "Follow us on Instagram",
    pinterest: "Follow us on Pinterest",
};
---

<Layout 
    title="Contact Us | Book Your Charlotte Kids Paint Party"
    description={seoDescription}
    image="/images/og-contact.jpg"
>
    <Header showHero={false} />

    <main>
        <!-- Request a Party Section -->
        <section class="bg-gray-50 py-16 relative overflow-hidden">
            <!-- Decorative Elements -->
            <div class="absolute top-10 left-10 text-white text-4xl opacity-20" aria-hidden="true">
                ★
            </div>
            <div
                class="absolute bottom-10 right-10 text-white text-4xl opacity-20"
                aria-hidden="true"
            >
                ★
            </div>

            <div class="container mx-auto px-4 text-center relative z-10">
                <h1
                    class="font-display text-4xl md:text-6xl text-brand-teal mb-4 uppercase"
                >
                    {formTitle}
                </h1>
                <p class="text-brand-pink font-body mb-12 max-w-2xl mx-auto">
                    {formSubtitle}
                </p>

                <!-- Success Message for Contact Form -->
                <div
                    id="contact-success"
                    class="hidden max-w-3xl mx-auto bg-white p-8 rounded-2xl shadow-sm text-center"
                >
                    <div class="w-20 h-20 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-10 h-10 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                        </svg>
                    </div>
                    <h2 class="font-display text-2xl text-brand-teal mb-4 uppercase">Message Sent!</h2>
                    <p class="font-body text-gray-600 mb-6">
                        Thank you for reaching out! I'll get back to you as soon as possible.
                    </p>
                    <a
                        href="/contact/"
                        class="inline-block bg-brand-pink text-white font-display font-bold uppercase tracking-wider px-8 py-3 rounded-full hover:bg-pink-500 transition shadow-md"
                    >
                        Send Another Message
                    </a>
                </div>

                <div
                    id="contact-form-container"
                    class="max-w-3xl mx-auto bg-white p-8 rounded-2xl shadow-sm"
                >
                    <form id="contact-form" class="space-y-6">
                        <input type="hidden" name="access_key" value="fa36c3ee-5545-45ed-b966-ea77eef22cb3" />
                        <input type="hidden" name="subject" value="New Party Request from itsanartparty.com" />
                        <input type="hidden" name="from_name" value="It's an Art Party" />
                        <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label for="name" class="sr-only">Your Name</label>
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    placeholder="Name"
                                    required
                                    class="w-full border border-gray-200 rounded-full px-6 py-3 focus:outline-none focus:border-brand-pink focus:ring-1 focus:ring-brand-pink transition"
                                />
                            </div>
                            <div>
                                <label for="email" class="sr-only">Your Email</label>
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    placeholder="Email"
                                    required
                                    class="w-full border border-gray-200 rounded-full px-6 py-3 focus:outline-none focus:border-brand-pink focus:ring-1 focus:ring-brand-pink transition"
                                />
                            </div>
                        </div>
                        <div>
                            <label for="phone" class="sr-only">Your Phone Number</label>
                            <input
                                type="tel"
                                id="phone"
                                name="phone"
                                placeholder="Phone"
                                class="w-full border border-gray-200 rounded-full px-6 py-3 focus:outline-none focus:border-brand-pink focus:ring-1 focus:ring-brand-pink transition"
                            />
                        </div>
                        <div>
                            <label for="message" class="sr-only">Your Message</label>
                            <textarea
                                id="message"
                                name="message"
                                rows="6"
                                placeholder="Message - Tell us about your party or art lesson needs!"
                                required
                                class="w-full border border-gray-200 rounded-2xl px-6 py-3 focus:outline-none focus:border-brand-pink focus:ring-1 focus:ring-brand-pink transition resize-none"
                            ></textarea>
                        </div>

                        <div class="flex justify-center">
                            <button
                                type="submit"
                                id="contact-submit-btn"
                                class="bg-brand-pink text-white font-display font-bold uppercase tracking-wider px-12 py-3 rounded-full hover:bg-pink-500 transition shadow-md cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed"
                            >
                                Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <!-- Newsletter Success Message -->
        <div
            id="newsletter-success"
            class="hidden fixed bottom-6 right-6 bg-white rounded-2xl shadow-xl p-6 max-w-sm z-50 border-l-4 border-green-500"
        >
            <button
                onclick="this.parentElement.classList.add('hidden')"
                class="absolute top-3 right-3 text-gray-400 hover:text-gray-600"
                aria-label="Close"
            >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
            <div class="flex items-start gap-4">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center flex-shrink-0">
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                </div>
                <div>
                    <h3 class="font-display text-lg text-brand-teal uppercase">You're Subscribed!</h3>
                    <p class="font-body text-gray-600 text-sm">Thanks for joining the newsletter!</p>
                </div>
            </div>
        </div>

        <!-- I Can't Wait To Hear From You Section -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 text-center">
                <h2
                    class="font-display text-3xl md:text-5xl text-brand-teal mb-6 uppercase"
                >
                    {hearFromYouTitle}
                </h2>
                <div class="font-body text-gray-600 mb-2" set:html={hearFromYouText} />
                <p class="font-body text-gray-600 mb-12">Thank you!</p>

                <div class="max-w-5xl mx-auto">
                    {hearFromYouImage ? (
                        <img
                            src={hearFromYouImage}
                            alt="Happy kids at an art party painting colorful canvases"
                            class="w-full h-auto object-cover rounded-lg shadow-sm"
                            loading="lazy"
                        />
                    ) : (
                        <img
                            src={hearFromYouImg.src}
                            alt="Happy kids at an art party painting colorful canvases"
                            class="w-full h-auto object-cover rounded-lg shadow-sm"
                            loading="lazy"
                        />
                    )}
                </div>
            </div>
        </section>

        <!-- Get In Touch Section -->
        <section class="py-16 bg-white">
            <div class="container mx-auto px-4">
                <div
                    class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 items-center"
                >
                    <!-- Contact Info -->
                    <div>
                        <h2
                            class="font-display text-4xl text-brand-teal mb-12 uppercase text-center md:text-left"
                        >
                            {contactTitle}
                        </h2>

                        <address class="space-y-8 not-italic">
                            <div class="flex items-center gap-6">
                                <div
                                    class="w-14 h-14 bg-brand-pink rounded-full flex items-center justify-center flex-shrink-0 text-white shadow-sm"
                                    aria-hidden="true"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-7 w-7"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                                            clip-rule="evenodd"></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="font-display text-xl text-brand-teal mb-1"
                                    >
                                        Address
                                    </h3>
                                    <p class="font-body text-gray-600 whitespace-pre-line">
                                        {address}
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-center gap-6">
                                <div
                                    class="w-14 h-14 bg-brand-pink rounded-full flex items-center justify-center flex-shrink-0 text-white shadow-sm"
                                    aria-hidden="true"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-7 w-7"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="font-display text-xl text-brand-teal mb-1"
                                    >
                                        Call or Text
                                    </h3>
                                    <p class="font-body text-gray-600">
                                        <a href={`tel:${phone.replace(/\D/g, '')}`} class="hover:text-brand-pink transition">{phone}</a>
                                    </p>
                                </div>
                            </div>

                            <div class="flex items-center gap-6">
                                <div
                                    class="w-14 h-14 bg-brand-pink rounded-full flex items-center justify-center flex-shrink-0 text-white shadow-sm"
                                    aria-hidden="true"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-7 w-7"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                    >
                                        <path
                                            d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
                                        ></path>
                                        <path
                                            d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"
                                        ></path>
                                    </svg>
                                </div>
                                <div>
                                    <h3
                                        class="font-display text-xl text-brand-teal mb-1"
                                    >
                                        Email
                                    </h3>
                                    <p class="font-body text-gray-600">
                                        <a href={`mailto:${email}`} class="hover:text-brand-pink transition">{email}</a>
                                    </p>
                                </div>
                            </div>
                        </address>

                        <!-- Social Icons -->
                        <nav
                            class="flex gap-4 mt-12 justify-center md:justify-start"
                            aria-label="Social media links"
                        >
                            {socialLinks.map((link: any) => {
                                const iconPath = socialIcons[link.platform];
                                const label = socialLabels[link.platform] || `Follow us on ${link.platform}`;
                                if (!iconPath) return null;
                                
                                return (
                                    <a
                                        href={link.url}
                                        class="text-brand-pink hover:text-pink-600 transition text-2xl"
                                        aria-label={label}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                    >
                                        <svg
                                            class="w-6 h-6 fill-current"
                                            viewBox="0 0 24 24"
                                            aria-hidden="true"
                                        >
                                            <path d={iconPath} />
                                        </svg>
                                    </a>
                                );
                            })}
                        </nav>
                    </div>

                    <!-- Map -->
                    <div
                        class="h-96 bg-gray-200 rounded-lg overflow-hidden relative"
                    >
                        <iframe
                            src={mapEmbedUrl}
                            width="100%"
                            height="100%"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy"
                            title="It's an Art Party location in Charlotte, NC"
                            class="absolute inset-0 w-full h-full"></iframe>
                    </div>
                </div>
            </div>
        </section>

        <!-- Newsletter Section -->
        <section class="bg-brand-pink py-16">
            <div
                class="container mx-auto px-4 flex flex-col md:flex-row items-center justify-center gap-8"
            >
                <div class="flex items-center gap-4">
                    <div class="text-white text-4xl" aria-hidden="true">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-12 w-12"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                    </div>
                    <div>
                        <h2 class="font-display text-3xl text-white uppercase">
                            {newsletterTitle}
                        </h2>
                        <p class="font-body text-white text-sm">
                            {newsletterSubtitle}
                        </p>
                    </div>
                </div>

                <form
                    id="newsletter-form"
                    class="flex flex-col md:flex-row gap-4 w-full md:w-auto items-center"
                >
                    <input type="hidden" name="access_key" value="fa36c3ee-5545-45ed-b966-ea77eef22cb3" />
                    <input type="hidden" name="subject" value="New Newsletter Signup from itsanartparty.com" />
                    <input type="checkbox" name="botcheck" class="hidden" style="display: none;" />
                    <label for="newsletter-email" class="sr-only">Email address</label>
                    <input
                        type="email"
                        id="newsletter-email"
                        name="email"
                        placeholder="Email"
                        required
                        class="h-12 px-6 rounded-full border-none bg-white focus:ring-2 focus:ring-white focus:outline-none w-full md:w-96 text-gray-800"
                    />
                    <button
                        type="submit"
                        id="newsletter-submit-btn"
                        class="h-12 bg-white text-brand-pink font-bold uppercase px-10 rounded-full hover:bg-gray-100 transition shadow-sm flex items-center justify-center cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        Join
                    </button>
                </form>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<script>
    // Contact Form AJAX Submission
    const contactForm = document.getElementById('contact-form') as HTMLFormElement;
    const contactSubmitBtn = document.getElementById('contact-submit-btn') as HTMLButtonElement;
    const contactSuccess = document.getElementById('contact-success');
    const contactFormContainer = document.getElementById('contact-form-container');

    if (contactForm) {
        contactForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Disable button and show loading state
            contactSubmitBtn.disabled = true;
            contactSubmitBtn.textContent = 'Sending...';
            
            const formData = new FormData(contactForm);
            
            // Add replyto field with email value
            const emailInput = contactForm.querySelector('input[name="email"]') as HTMLInputElement;
            if (emailInput) {
                formData.append('replyto', emailInput.value);
            }
            
            try {
                const response = await fetch('https://api.web3forms.com/submit', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success message, hide form
                    if (contactSuccess) contactSuccess.classList.remove('hidden');
                    if (contactFormContainer) contactFormContainer.classList.add('hidden');
                    
                    // Scroll to top of section
                    contactSuccess?.scrollIntoView({ behavior: 'smooth', block: 'center' });
                } else {
                    throw new Error(result.message || 'Form submission failed');
                }
            } catch (error) {
                alert('Something went wrong. Please try again or contact us directly at robin@itsanartparty.com');
                contactSubmitBtn.disabled = false;
                contactSubmitBtn.textContent = 'Send';
            }
        });
    }

    // Newsletter Form AJAX Submission
    const newsletterForm = document.getElementById('newsletter-form') as HTMLFormElement;
    const newsletterSubmitBtn = document.getElementById('newsletter-submit-btn') as HTMLButtonElement;
    const newsletterSuccess = document.getElementById('newsletter-success');

    if (newsletterForm) {
        newsletterForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            // Disable button and show loading state
            newsletterSubmitBtn.disabled = true;
            newsletterSubmitBtn.textContent = 'Joining...';
            
            const formData = new FormData(newsletterForm);
            
            try {
                const response = await fetch('https://api.web3forms.com/submit', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Show success toast
                    if (newsletterSuccess) {
                        newsletterSuccess.classList.remove('hidden');
                        // Auto-hide after 8 seconds
                        setTimeout(() => {
                            newsletterSuccess.classList.add('hidden');
                        }, 8000);
                    }
                    
                    // Reset form and button
                    newsletterForm.reset();
                    newsletterSubmitBtn.disabled = false;
                    newsletterSubmitBtn.textContent = 'Join';
                } else {
                    throw new Error(result.message || 'Form submission failed');
                }
            } catch (error) {
                alert('Something went wrong. Please try again.');
                newsletterSubmitBtn.disabled = false;
                newsletterSubmitBtn.textContent = 'Join';
            }
        });
    }
</script>
