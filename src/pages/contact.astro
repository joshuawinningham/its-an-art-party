---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageHeader from "../components/PageHeader.astro";
import { getContactPage, type WPContactPage } from "../lib/wordpress";

// Fallback image
import hearFromYouImg from "../assets/images/9.jpg";

// Try to fetch from WordPress
let wpPage: WPContactPage | null = null;
let useWordPress = false;

try {
    wpPage = await getContactPage();
    if (wpPage?.acf) {
        useWordPress = true;
    }
} catch (error) {
    console.warn('WordPress API unavailable for Contact page, using fallback content');
}

// Extract WordPress data or use fallback values
const acf = wpPage?.acf || {};

// Page content (WordPress or fallback)
const seoDescription = acf.seo_description || "Contact It's an Art Party to book your kids paint party or art lesson in Charlotte, NC. Call 980-253-4829 or fill out our online form. Serving Charlotte and surrounding areas.";

// Form section
const formTitle = acf.form_title || "Request a Party";
const formSubtitle = acf.form_subtitle || "Please fill out the form below to request more information or schedule a paint party or art lesson.";

// Hear from you section
const hearFromYouTitle = acf.hear_from_you_title || "I Can't Wait To Hear From You!";
const hearFromYouText = acf.hear_from_you_text || `You can also call or text me directly at <a href="tel:9802534829" class="text-brand-pink hover:underline">980-253-4829</a> or send an email to <a href="mailto:robin@itsanartparty.com" class="text-brand-pink hover:underline">robin@itsanartparty.com</a> and I will respond as soon as possible.`;
const hearFromYouImage = acf.hear_from_you_image?.url;

// Contact info
const contactTitle = acf.contact_title || "Get In Touch";
const address = acf.address || "7845 Colony Rd Ste C4-227\nCharlotte, NC 28226";
const phone = acf.phone || "980-253-4829";
const email = acf.email || "robin@itsanartparty.com";

// Social links
const socialLinks = acf.social_links || [
    { platform: "facebook", url: "https://www.facebook.com/itsanartparty" },
    { platform: "twitter", url: "https://twitter.com/itsanartparty" },
    { platform: "youtube", url: "https://www.youtube.com/itsanartparty" },
];

// Map
